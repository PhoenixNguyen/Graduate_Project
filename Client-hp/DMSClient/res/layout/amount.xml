<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Take Order"/>
        
        <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    <TextView 
            android:id="@+id/total"
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Total:  "
            
            />
	    <EditText 
            android:id="@+id/total_value"
            android:gravity="right"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0"/>
	    </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    <TextView 
            android:id="@+id/document"
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="document"/>
	    <EditText 
            android:id="@+id/document_value"
            android:gravity="right"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0"/>
	    </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    <TextView 
            android:id="@+id/discount"
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="discount  "/>
	    <EditText 
            android:id="@+id/discount_value"
            android:gravity="right"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0"/>
	    </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    <TextView 
            android:id="@+id/tax"
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tax  "/>
	    <EditText 
            android:id="@+id/tax_value"
            android:gravity="right"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0"/>
	    </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    <TextView 
            android:id="@+id/sum"
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="sum  "/>
	    <EditText 
            android:id="@+id/sum_value"
            android:gravity="right"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0"/>
	    </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    <TextView 
            android:id="@+id/discount2"
            android:gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="discount 2  "/>
	    <EditText 
            android:id="@+id/dc2_value"
            android:gravity="right"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0"/>
        </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			   <TextView 
		            android:id="@+id/note"
		            android:gravity="right"
            		android:layout_width="100dp"
		            android:layout_height="wrap_content"
		            android:text="Note: "/>
			   <EditText
		            android:id="@+id/note_value"
		            android:gravity="right"
		            android:layout_width="160dp"
		            android:layout_height="wrap_content"
		            android:text=""/>
			    <Button
		            android:id="@+id/save"
		            android:layout_width="90dp"
		            android:layout_height="wrap_content"
		            android:text="Save"/>
			   
	    </LinearLayout>
    </LinearLayout>

    
  	<LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_weight="10"
      android:gravity="center|bottom"
      
      >
    <Button 
        android:id="@+id/product_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product"/>
    
    <Button
        android:id="@+id/amount_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"/>
      
  	</LinearLayout>
        
</LinearLayout>
