<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FFFFCC"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/FFFFCC"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Đơn đặt hàng"/>
        
        <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
		    <TextView 
	            android:id="@+id/customer_id_label"
	            android:gravity="right"
	            android:layout_weight="0.3"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Mã khách hàng:  "
	            
	            />
		    <EditText 
	            android:id="@+id/customer_id"
	            android:gravity="right"
	            android:layout_weight="0.7"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="false"
	            android:text="0"/>
	    </LinearLayout>
	    
        <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
		    <TextView 
	            android:id="@+id/customer_name_label"
	            android:gravity="right"
	            android:layout_weight="0.3"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Tên khách hàng:  "
	            
	            />
		    <EditText 
	            android:id="@+id/customer_name"
	            android:gravity="right"
	            android:layout_weight="0.7"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="false"
	            android:text="0"/>
	    </LinearLayout>
        <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
		    <TextView 
	            android:id="@+id/total"
	            android:gravity="right"
	            android:layout_weight="0.3"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Tổng giá trị:  "
	            
	            />
		    <EditText 
	            android:id="@+id/total_value"
	            android:gravity="right"
	            android:layout_weight="0.7"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="false"
	            android:text="0"/>
	    </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    <TextView 
            android:id="@+id/document"
            android:gravity="right"
            android:layout_weight="0.3"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Gồm có:"/>
	    <EditText 
            android:id="@+id/document_value"
            android:gravity="right"
            android:layout_weight="0.7"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0"/>
	    </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
		    <TextView 
	            android:id="@+id/discount"
	            android:gravity="right"
	            android:layout_weight="0.3"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Giảm giá:"/>
		    <EditText 
	            android:id="@+id/discount_percent"
	            android:gravity="right"
	            android:layout_weight="0.2"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="false"
	            android:text="0"/>
		    <Button
		            android:id="@+id/set"
		            android:layout_weight="0.2"
	        		android:layout_width="0dip"
		            android:layout_height="wrap_content"
		            android:text="set"
		            android:onClick="setDiscount"
		            />
		    <EditText 
	            android:id="@+id/discount_value"
	            android:gravity="right"
	            android:layout_weight="0.3"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="false"
	            android:text="0"/>
	    </LinearLayout>
	    
	    <EditText 
            android:id="@+id/tax"
	        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            />
	    
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
		    <TextView 
	            android:id="@+id/sum"
	            android:gravity="right"
	            android:layout_weight="0.3"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:text="Tổng cuối cùng:"/>
		    <EditText 
	            android:id="@+id/sum_value"
	            android:gravity="right"
	            android:layout_weight="0.7"
		        android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:enabled="false"
	            android:text="0"/>
	    </LinearLayout>
	    
	    <!-- LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
	    <TextView 
            android:id="@+id/discount2"
            android:gravity="right"
            android:layout_weight="0.3"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="discount 2  "/>
	    <EditText 
            android:id="@+id/dc2_value"
            android:gravity="right"
            android:layout_weight="0.7"
	        android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0"/>
        </LinearLayout>
	    
	    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			   <TextView 
		            android:id="@+id/note"
		            android:gravity="right"
            		android:layout_weight="0.3"
	        		android:layout_width="0dip"
		            android:layout_height="wrap_content"
		            android:text="Note: "/>
			   <EditText
		            android:id="@+id/note_value"
		            android:gravity="right"
		            android:layout_weight="0.7"
	        		android:layout_width="0dip"
		            android:layout_height="wrap_content"
		            android:text=""/>
			    
			   
	    </LinearLayout-->
	    <Button
		            android:id="@+id/save"
	        		android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="30dp"
		            android:text="Lưu lại"/>
    </LinearLayout>
        
</LinearLayout>
