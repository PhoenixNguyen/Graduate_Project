<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
        <property name="hibernate.dialect">com.hp.filter.CustomMysqlDialect</property>
        <!--    <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>-->
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=DMSServer</property>
<!--        URL Format: jdbc:jtds:sqlserver://<server>:<port1443>;DatabaseName=<database>-->

        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">root</property>
        <property name="show_sql">true</property>
    
        <mapping class="com.hp.excelhandle.Customer" />
  </session-factory>
</hibernate-configuration>
