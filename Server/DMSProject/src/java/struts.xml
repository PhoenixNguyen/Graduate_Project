<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    
    <package name="map"  extends="hibernate-default" namespace="/map">
		
        <action name="showMap" method="showMap" class="com.hp.action.ShowMapAction">
            <result name="success">view-map.jsp</result>
        </action>
        
        <action name="customer-detail" method="getRoad" class="com.hp.action.ShowMapAction">
            <result name="success">view-map-detail.jsp</result>
        </action>

        <action name="ajaxdemo" method="ajaxDemo" class="com.hp.action.ShowMapAction">
            <result name="success" >AjaxDemo.jsp</result>
        </action>
        
        <action name="HelloWorld" method="execute" class="com.hp.action.HelloWorld"  >
            <result type="json" />
        </action>
        <action name="HelloWorld1" method="execute" class="com.hp.action.HelloWorld"  >
            <result name="success" >HelloWorld.jsp</result>
        </action>
    </package>
    
    <package name="admin"  extends="hibernate-default" namespace="/admin">
		
        <action name="add-customer" method="addCustomerFromExcelFile" class="com.hp.action.CustomerAction">
            <result name="success">add-customer-result.jsp</result>
            <result name="input">add-customer-fail.jsp</result>
        </action>
        
        <action name="upload" method="saveFile" class="com.hp.action.CustomerAction">
            
            <interceptor-ref name="fileUpload">
                <param name="allowedTypes">
                    application/vnd.ms-excel
                </param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"></interceptor-ref>
            
            <result name="success" type="redirect">upload-customer-result.jsp</result>
            <result name="input">upload-customer-file.jsp</result>
        </action>
        
    </package>
    
</struts>